<div class="main-section" ng-controller="ConfirmationCtrl as cCtrl">
    <section class="counter-confirmation">
    <form name="confirmation-form" ng-cloak>
        <div class="row">
            <h1 class="text-center">Email Confirmation</h1>
        </div>
        <div class="col-xs-12">&nbsp;</div>
        <div ng-if="!showError">
            <div class="col-xs-12 text-center">Your email address, {{userData.email_address}} has been confirmed. 
            You can now login and enjoy the CountDraft experience!</div>
            <div class="col-xs-12">&nbsp;</div>
            <div class="col-xs-12">
               <div class="col-xs-3 col-sm-4">&nbsp;</div>
               <div class="col-xs-6 col-sm-4"><a href="/dashboard"class="btn primary btn-block">Dashboard</a></div>
               <div class="col-xs-3 col-sm-4">&nbsp;</div> 
            </div>
        </div>
        <div ng-if="showError">
            <div class="col-xs-12 text-center">{{userData.errorMessage}}</div>
            <div class="col-xs-12">&nbsp;</div>
            <div class="col-xs-12">
               <div class="col-xs-3 col-sm-4">&nbsp;</div>
               <div class="col-xs-6 col-sm-4"><a href="/login" class="btn primary btn-block">Login</a></div>
               <div class="col-xs-3 col-sm-4">&nbsp;</div> 
            </div>
        </div>
    </form>
    </section>
</div>
<%- contentFor('title') %>Email Confirmation<%- contentFor('end') %>