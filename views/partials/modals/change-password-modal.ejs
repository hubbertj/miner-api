<script type="text/ng-template" id="change-password-modal.html" class="counter-modal">
    <div id="change-password-modal" class="counter-modal" ng-init="mCtrl.initChangePasswordModal()">
        <div class="model-tmpl-0">
            <form ng-submit="mCtrl.onSubmit(mCtrl.changePasswordForm)" class="counter-form" data-toggle="validator" role="form" name="changePasswordForm">
                <div class="modal-header">
                    <h4 class="modal-title text-center">Change Password</h4>
                    <button type="button" class="btn close quinary" ng-click="mCtrl.cancel()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group" show-errors>
                        <input type="password" class="form-control" name="old_password" placeholder="Old password *" ng-model="passwordModel.old_password" data-minlength="6" required>
                        <div class="help-block" ng-if="changePasswordForm.old_password.$error && !changePasswordForm.old_password.$error.required">Not long enough</div>
                    </div>
                    <div class="form-group" show-errors>
                        <input type="password" class="form-control" name="new_password" placeholder="Enter password *" ng-model="passwordModel.new_password" data-minlength="6" required>
                        <div class="help-block" ng-if="changePasswordForm.new_password.$error && !changePasswordForm.new_password.$error.required">Not long enough</div>
                    </div>
                    <div class="form-group" show-errors>
                        <input type="password" class="form-control" name="passwordConfirm" placeholder="Enter password again *" data-minlength="6" ng-model="passwordModel.password_confirm" required>
                        <div class="help-block" ng-if="changePasswordForm.passwordConfirm.$error && !changePasswordForm.passwordConfirm.$error.required">Not long enough</div>
                    </div>
                    <div class="col-xs-3 col-sm-4">&nbsp;</div>
                    <div class="col-xs-6 col-sm-4">
                        <button class="btn btn-block primary" type="submit" ng-disabled="changePasswordForm.$invalid">Submit</button>
                    </div>
                    <div class="col-xs-3 col-sm-4">&nbsp;</div>
                </div>
                <div class="modal-footer">&nbsp;</div>
            </form>
        </div>
    </div>
</script>
